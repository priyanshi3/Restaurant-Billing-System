<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
	<system.serviceModel>

		<serviceHostingEnvironment multipleSiteBindingsEnabled="true" />
		
		<services>
			<service name="ItemService.itemService" behaviorConfiguration="itemServiceBehaviour">
				<endpoint
					address="itemService"
					binding="basicHttpBinding"
					contract="ItemService.itemInterface" />
				
			</service>

			<service name="CustomerService.customerService" behaviorConfiguration="customerServiceBehaviour">
				<endpoint
					address="customerService"
					binding="basicHttpBinding"
					contract="CustomerService.customerInterface" />
				
			</service>

			<service name="BillService.billService" behaviorConfiguration="billServiceBehaviour">
				<endpoint
					address="billService"
					binding="basicHttpBinding"
					contract="BillService.billInterface" />
				
			</service>
			
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior name="itemServiceBehaviour">
					<serviceMetadata httpGetEnabled="True" />
				</behavior>
				<behavior name="customerServiceBehaviour">
					<serviceMetadata httpGetEnabled="True" />
				</behavior>
				<behavior name="billServiceBehaviour">
					<serviceMetadata httpGetEnabled="True" />
				</behavior>
			</serviceBehaviors>
		</behaviors>

	</system.serviceModel>
</configuration>